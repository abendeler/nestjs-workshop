{
  "compilerOptions": {
    "target": "ES6",                          // Ensure you're using ES6 or later
    "module": "CommonJS",                      // Node.js uses CommonJS modules
    "strict": true,                            // Strict mode for TypeScript
    "esModuleInterop": true,                   // Allow CommonJS-style imports
    "skipLibCheck": true,                      // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,  // Ensure file casing consistency
    "outDir": "./dist",                        // Output compiled files to 'dist'
    "rootDir": "./src",                        // Set the source directory for TypeScript files
    "resolveJsonModule": true,                 // Allow importing .json files
    "experimentalDecorators": true,            // Enable decorator support
    "emitDecoratorMetadata": true              // Enable metadata reflection
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
